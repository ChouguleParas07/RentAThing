# Copy this file to `.env` and adjust values for your environment.

APP_ENV=local
APP_NAME=Rent-a-Thing API
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Security
SECRET_KEY=change_me_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=rentathing
POSTGRES_PASSWORD=rentathing
POSTGRES_DB=rentathing
DATABASE_URL=postgresql+asyncpg://rentathing:rentathing@db:5432/rentathing

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

